extends layouts/main

block content
    .form-container
        form(action=`/users${routes.changePassword}`, method="post")
            input(type="password", name="oldPassword", placeholder="현재 사용중인 비밀번호")
            input(type="password", name="newPassword", placeholder="변경할 새로운 비밀번호")
            input(type="password", name="newPassword1", placeholder="새로운 비밀번호 확인")
            input(type="submit", value="비밀번호 변경하기")